

<tr>
  <td><%= subject.name %></td>
  <% if subject.compulsory %>
    <td class="text-primary"><i class="fa fa-check"></i></td>
  <% else %>
    <td class="text-danger"><i class="fa fa-times"></i></td>
  <% end %>

  <% if subject.crucial %>
     <td class="text-primary"><i class="fa fa-check"></i></td>
  <% else %>
    <td class="text-danger"><i class="fa fa-times"></i></td>
  <% end %>
  <td><%= link_to "Show this subject", subject %></td>
</tr>